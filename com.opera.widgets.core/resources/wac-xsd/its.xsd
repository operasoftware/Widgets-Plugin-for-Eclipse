  <xs:import namespace="http://www.w3.org/ns/widgets" schemaLocation="widget.xsd"/>
  <xs:attribute name="dir">
    <xs:simpleType>
      <xs:restriction base="xs:token">
        <xs:enumeration value="ltr"/>
